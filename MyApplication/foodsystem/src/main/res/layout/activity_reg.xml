<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="注册页面"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="29dp"
        android:text="注册用户:" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/username"
        android:layout_marginTop="16dp"
        android:text="初始密码:" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_below="@+id/username"
        android:ems="10"
        android:inputType="textPassword"
        android:hint=""/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="确认密码:"
        android:layout_below="@+id/password1"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password1"
        android:layout_alignStart="@+id/password1"
        android:layout_below="@+id/password1"
        android:ems="10"
        android:inputType="textPassword"
        android:hint=""/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="性别:"
        android:layout_below="@+id/password2"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignLeft="@+id/password2"
        android:layout_alignStart="@+id/password2"
        android:layout_marginTop="-10dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男" />

        <RadioButton
            android:id="@+id/girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="14dp"
        android:text="出生日期:" />

    <EditText
        android:id="@+id/birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup"
        android:hint=""/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="邮箱:"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/birthday"
        android:layout_alignStart="@+id/birthday"
        android:layout_below="@+id/birthday"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint=""/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/email"
        android:layout_marginTop="19dp"
        android:text="兴趣爱好:" />

    <CheckBox
        android:id="@+id/singing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="唱歌"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <CheckBox
        android:id="@+id/basketball"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/singing"
        android:layout_alignEnd="@+id/email"
        android:layout_alignRight="@+id/email"
        android:text="打篮球" />

    <CheckBox
        android:id="@+id/swiming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/singing"
        android:layout_alignStart="@+id/singing"
        android:layout_below="@+id/singing"
        android:text="游泳" />

    <CheckBox
        android:id="@+id/football"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/basketball"
        android:layout_alignRight="@+id/basketball"
        android:layout_below="@+id/basketball"
        android:text="踢足球" />

    <CheckBox
        android:id="@+id/running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/swiming"
        android:layout_alignRight="@+id/swiming"
        android:layout_below="@+id/swiming"
        android:text="跑步" />

    <CheckBox
        android:id="@+id/food"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/football"
        android:layout_alignRight="@+id/football"
        android:layout_below="@+id/football"
        android:text="美食" />

    <CheckBox
        android:id="@+id/sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/running"
        android:layout_alignRight="@+id/running"
        android:layout_below="@+id/running"
        android:text="睡觉" />

    <CheckBox
        android:id="@+id/movie"
        android:layout_width="110dp"
        android:layout_height="32dp"
        android:text="看电影"
        android:layout_below="@+id/food"
        android:layout_alignLeft="@+id/food"
        android:layout_alignStart="@+id/food" />

    <Button
        android:id="@+id/subreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/movie"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/movie"
        android:layout_marginBottom="18dp"
        android:text="提交注册" />


</RelativeLayout>