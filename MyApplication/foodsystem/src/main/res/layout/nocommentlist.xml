<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/nocommentimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/rdd" />

    <TextView
        android:id="@+id/nocommentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="38dp"
        android:layout_toEndOf="@+id/nocommentimg"
        android:layout_toRightOf="@+id/nocommentimg"
        android:text="TextView" />

    <TextView
        android:id="@+id/nocommenttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nocommentname"
        android:layout_alignStart="@+id/nocommentname"
        android:layout_below="@+id/nocommentname"
        android:layout_marginTop="34dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/nocommentDI"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/nocommentname"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/nocommenttime"
        android:layout_toRightOf="@+id/nocommenttime"
        android:src="@mipmap/nocommentdi" />

</RelativeLayout>