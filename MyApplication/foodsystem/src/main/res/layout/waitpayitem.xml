<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/waitpay_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/rdd"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/waitpay_name"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:text="TextView"
        android:textSize="25dp"
        android:layout_above="@+id/waitpay_pay"
        android:layout_toRightOf="@+id/waitpay_img"
        android:layout_toEndOf="@+id/waitpay_img" />

    <TextView
        android:id="@+id/waitpay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/waitpay_img"
        android:layout_alignLeft="@+id/waitpay_sum"
        android:layout_alignStart="@+id/waitpay_sum" />

    <ImageView
        android:id="@+id/waitpay_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pay1"


        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignBottom="@+id/waitpay_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/waitpay_sum"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#009d42"
        android:text="TextView"
        android:layout_below="@+id/waitpay_name"
        android:layout_alignLeft="@+id/waitpay_name"
        android:layout_alignStart="@+id/waitpay_name" />
</RelativeLayout>