<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jmy.foodsystem.home.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/MyThe"
        android:orientation="vertical"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <!--android:background="@color/MyThe"-->


    </RelativeLayout>

    <ListView
        android:id="@+id/menulist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/my2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:background="@color/MyThe"
        android:id="@+id/my2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/order1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/shopping_100"
            android:layout_alignTop="@+id/index1"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/index1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/home_100"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp" />

        <ImageView
            android:id="@+id/user1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:src="@mipmap/user_100"
            android:layout_alignTop="@+id/order1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="主页"
            android:layout_below="@+id/index1"
            android:layout_alignLeft="@+id/index1"
            android:layout_alignStart="@+id/index1" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order1"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="订单" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="用户"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/user1"
            android:layout_alignStart="@+id/user1" />
    </RelativeLayout>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/menulist"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:text="city"
        android:textSize="20dp"
        android:textColor="#fff"/>


</RelativeLayout>
